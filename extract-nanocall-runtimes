#!/bin/bash

# get scaling & basecalling runtimes from nanocall log file

printab() {
    _delim=$'\t'
    printf "%s" "$1"
    shift
    while [ $# -ge 1 ]; do
        printf "%s%s" "$_delim" "$1"
        shift
    done
    printf "\n"
}

printab "scaling" "basecalling"

t=($(cat "$@" |
        tr '\r' '\n' |
        grep -n 'seconds$' |
        tr ':' ' ' |
        sed 's/  */\t/g' |
        sort -k 3n -k 1n |
        tail -n 2 |
        cut -f 6))

[ ${#t[@]} -gt 1 ] || t=(0 ${t[0]})

printab "${t[@]:0:2}"
